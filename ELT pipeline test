echo "üîç Checking available models..." && \
ls -la models/universal/ && \
echo "üöÄ Running dbt models..." && \
dbt run --profiles-dir . --target docker --select models/universal/* --fail-fast || \
(echo "‚ùå Some models failed, continuing..." && exit 0)
    ''',
    dag=dag,
)

